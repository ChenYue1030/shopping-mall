/**index.wxss**/
page {
  background-color: #fff;
}
/* 轮播图 */
.swiper-container {
  margin: 20rpx;
}

.swiper-box {
  height: 350rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.swiper-img {
  width: 100%;
  border-radius: 20rpx;
  height: 350rpx;
}
/* 分类 */
.classification {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 1px 2px rgb(150 150 150 / 30%);
  border-radius: 20rpx;
}

.classification-item {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-self: center;
  align-items: center;
  justify-content: center;
}

.classification-image {
  width: 100rpx;
  height: 100rpx;
}

.classification-text {
  font-size: 26rpx;
  padding: 10rpx 10rpx 0 10rpx;
  box-sizing: border-box;
}